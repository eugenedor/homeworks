@model IEnumerable<ToolsStore.Domain.Entities.CartX>

@{
    ViewBag.Title = "Содержание заказа";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Содержание заказа № @Model.Min(x => x.OrderId)</h2>

<table class="Grid">
    <tr>
        <th>Наименование</th>
        <th>Тип оборудования</th>
        <th>Категория</th>
        <th>Цена</th>
        <th>Количество</th>
        <th>Сумма</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductName</td>
            <td>@item.EquipmentName</td>
            <td>@item.CategoryName</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@item.Summ</td>
        </tr>
    }
</table>
<h3>Итого: @Model.Sum(x => x.Summ)</h3>
@Html.ActionLink("Вернуться к списку заказов", "Index")
