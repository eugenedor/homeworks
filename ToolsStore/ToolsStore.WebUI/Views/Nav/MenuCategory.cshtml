@model IEnumerable<ToolsStore.Domain.Entities.CT_CATEGORY>

@Html.ActionLink("ВСЕ ИНСТРУМЕНТЫ", "List", "Product")

@foreach (var link in Model.OrderBy(x => x.Name))
{
    @Html.RouteLink(link.Name, new
{
    controller = "Product",
    action = "List",
    category = link.CategoryId
},
    new
    {
        @class = link.CategoryId == ViewBag.SelectedCategories ? "selected" : null
    })
}