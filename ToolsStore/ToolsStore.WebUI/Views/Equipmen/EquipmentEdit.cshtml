@model ToolsStore.Domain.Entities.SK_EQUIPMENT

@{
    ViewBag.Title = "Редактирование типа оборудования" + Model.Code;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Редактирование @Model.Code</h2>

@using (Html.BeginForm("EquipmentEdit", "Equipmen"))
{
    <div>
        @Html.HiddenFor(x => x.EquipmentId)
    </div>
    <div style="font-weight:bold">
        Код типа оборудования:
    </div>
    <div>
        @Html.EditorFor(x => x.Code)
    </div>
    <div>&nbsp;</div>
    <div style="font-weight:bold">
        Категория:
    </div>
    <div>
        @Html.EditorFor(x => x.CategoryId)
    </div>
    <div>&nbsp;</div>
    <div style="font-weight:bold">
        Наименование:</div>
    <div>
        @Html.EditorFor(x => x.Name)
    </div>
    <div>&nbsp;</div>
    <div style="font-weight:bold">
        Наименование (добавочное):
    </div>
    <div>
        @Html.EditorFor(x => x.NameExtra)
    </div>
    <div>&nbsp;</div>
    <div style="font-weight:bold">
        Порядок:
    </div>
    <div>
        @Html.EditorFor(x => x.Ord)
    </div>
    <input type="submit" value="Сохранить" />
    @Html.ActionLink("Отменить и вернуться к списку", "Equipments")
}