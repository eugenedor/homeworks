@model IEnumerable<ToolsStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Товары";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Товары</h1>

<p>
    @Html.ActionLink("Вернуться к списку", "Index", "Admin")
</p>

<table class="Grid">
    <tr>
        <th>ID</th>
        <th>Тип оборудования</th>
        <th>Бренд</th>
        <th>Модель</th>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Масса</th>
        <th>Длина</th>
        <th>Ширина</th>
        <th>Высота</th>
        <th>Цвет</th>
        <th>Мощность</th>
        <th>Комплект</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.EquipmentName</td>
            <td>@item.BrandName</td>
            <td>@item.ModelName</td>
            <td>@item.Name</td>
            <td>@item.Descr</td>
            <td>@item.Mass</td>
            <td>@item.Length</td>
            <td>@item.Width</td>
            <td>@item.Height</td>
            <td>@item.Color</td>
            <td>@item.Power</td>
            <td>@item.Kit</td>
        </tr>
    }
</table>