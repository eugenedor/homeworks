@model ToolsStore.Domain.Entities.CART

<div id="cart">
    <span class="caption">
        <b>Ваша корзина:</b>
        Кол-во: @Model.Lines.Sum(x => x.Quantity);
        Сумма: @Model.ComputeTotalValue().ToString("")
    </span>
    @Html.ActionLink("Перейти к корзине", "Index", "Cart", 
        new {   returnUrl = Request.Url.PathAndQuery}, null)
    @Html.ActionLink("Очистить корзину", "ClearCart", "Cart")
</div>